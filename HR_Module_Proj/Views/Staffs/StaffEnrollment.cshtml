						<div class="mb-3">
							<label asp-for="MasterStaffDetail.Category" class="control-label m-1"> Category</label>
							<input asp-for="MasterStaffDetail.Category" class="form-control" />
							<span asp-validation-for="MasterStaffDetail.Category" class="text-danger"></span>
						</div>
						<div class="mb-3">
							<label asp-for="MasterStaffDetail.Caste" class="control-label m-1"> Caste</label>
