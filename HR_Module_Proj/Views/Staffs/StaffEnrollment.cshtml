					<h5 id="formTitle1" class="card-title">Add Master Staff</h5>
					<form asp-action="SaveAndUpdate" method="post">
						<input asp-for="MasterStaffDetail.StaffId" type="hidden" />
						<div class="mb-3">
							<label asp-for="MasterStaffDetail.StaffName"
								   class="control-label m-1">StaffName</label>
							<input asp-for="MasterStaffDetail.StaffName" class="form-control" />
							<span asp-validation-for="MasterStaffDetail.StaffName" class="text-danger"></span>
						</div>
						<div class="mb-3">
							<label asp-for="MasterStaffDetail.EMPStaffID" class="control-label m-1">EMP StaffID</label>
							<input asp-for="MasterStaffDetail.EMPStaffID" class="form-control" />
							<span asp-validation-for="MasterStaffDetail.EMPStaffID" class="text-danger"></span>
						</div>
						<div class="mb-3">
							<label asp-for="MasterStaffDetail.Gender" class="control-label m-1">Gender</label>
							<input asp-for="MasterStaffDetail.Gender" class="form-control" />
							<span asp-validation-for="MasterStaffDetail.Gender" class="text-danger"></span>
