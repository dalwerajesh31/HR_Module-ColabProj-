						</div>
						<div class="mb-3">
							<label asp-for="MasterStaffDetail.WorkGroup" class="control-label m-1"> WorkGroup</label>
							<input asp-for="MasterStaffDetail.WorkGroup" class="form-control" />
							<span asp-validation-for="MasterStaffDetail.WorkGroup" class="text-danger"></span>
						</div>
						<div class="d-flex gap-2">
							<button id="submitBtn" type="submit" class="btn btn-primary">Save</button>
							<button type="button" class="btn btn-secondary" onclick="resetForm()">Reset</button>
						</div>
					</form>
				</div>
			</div>
		</div>
