						</div>
						<div class="mb-3">
							<label asp-for="MasterStaffDetail.City" class="control-label m-1"> City</label>
							<input asp-for="MasterStaffDetail.City" class="form-control" />
							<span asp-validation-for="MasterStaffDetail.City" class="text-danger"></span>
						</div>
						<div class="mb-3">
							<label asp-for="MasterStaffDetail.Pincode" class="control-label m-1"> Pincode</label>
							<input asp-for="MasterStaffDetail.Pincode" class="form-control" />
							<span asp-validation-for="MasterStaffDetail.Pincode" class="text-danger"></span>
						</div>
						<div class="mb-3">
							<label asp-for="MasterStaffDetail.DepartmentID" class="control-label m-1"> Department</label>
							<input asp-for="MasterStaffDetail.DepartmentID" class="form-control" />
							<span asp-validation-for="MasterStaffDetail.DepartmentID" class="text-danger"></span>
						</div>
						<div class="mb-3">
							<label asp-for="MasterStaffDetail.JoiningDate" class="control-label m-1"> JoiningDate</label>
							<input asp-for="MasterStaffDetail.JoiningDate" class="form-control" />
							<span asp-validation-for="MasterStaffDetail.JoiningDate" class="text-danger"></span>
						</div>
						<div class="mb-3">
							<label asp-for="MasterStaffDetail.DesignationID" class="control-label m-1"> Designation</label>
							<input asp-for="MasterStaffDetail.DesignationID" class="form-control" />
