<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - HR_Module_Proj</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/HR_Module_Proj.styles.css" asp-append-version="true" />

	<style>

		.nav-black-bold {
			color: black !important;
			font-weight: bold;
			font-size: 1.0rem; /* slightly bigger than default */
		}

			.nav-black-bold:hover {
				color: #000 !important; /* ensure it stays black on hover */
				background-color: #f0f0f0; /* optional: light background on hover */
			}

		.nav-link {
			cursor: pointer;
		}

			.nav-link::after {
				content: "▶";
				display: inline-block;
				margin-right: 5px;
				transition: transform 0.3s ease;
			}

			.nav-link[aria-expanded="true"]::after {
				transform: rotate(90deg);
			}
	</style>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid" style="background-color: #FA6B66">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"
				   style="font-weight: bold; color: black; padding: 5px 10px; border-radius: 4px;">
					<h1>HR Module</h1>
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	@* <div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div> *@
	<div class="container-fluid">
		<div class="row">
			<!-- Left Sidebar - 15% width -->
			<div class="col-2" style="background-color: #FA6B66; min-height: 100vh;">
				<!-- Sidebar content -->
				<h5 class="mt-3"></h5>
				<ul class="nav flex-column">
					<!-- Master -->
					<li class="nav-item">
						<a class="nav-link nav-black-bold" data-bs-toggle="collapse" href="#master1Submenu" role="button" aria-expanded="false" aria-controls="master1Submenu">
							Master
						</a>
						<ul class="collapse list-unstyled ps-3" id="master1Submenu">
							<li><a class="nav-link nav-black-bold" href="/MasterDepartment/index">Master Department</a></li>
						</ul>
					</li>
				</ul>
			</div>

			<!-- Main Content - 85% width -->
			<div class="col-10">
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>
		</div>
	</div>
	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - HR_Module_Proj - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
